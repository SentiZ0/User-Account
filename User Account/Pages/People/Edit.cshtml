@page
@model User_Account.Pages.People.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Person</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Person.Id" />
            <div class="form-group">
                <label asp-for="Person.FirstName" class="control-label"></label>
                <input asp-for="Person.FirstName" class="form-control" />
                <span asp-validation-for="Person.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Person.LastName" class="control-label"></label>
                <input asp-for="Person.LastName" class="form-control" />
                <span asp-validation-for="Person.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Person.BirthYear" class="control-label"></label>
                <input asp-for="Person.BirthYear" class="form-control" />
                <span asp-validation-for="Person.BirthYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Person.UserName" class="control-label"></label>
                <input asp-for="Person.UserName" class="form-control" />
                <span asp-validation-for="Person.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Person.DataUpdateTime" class="control-label"></label>
                <input asp-for="Person.DataUpdateTime" class="form-control" />
                <span asp-validation-for="Person.DataUpdateTime" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Person.LeapYear" /> @Html.DisplayNameFor(model => model.Person.LeapYear)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
